generator client {
  provider = "prisma-client-js"
//   output   = "../generated/prisma"    estava incorreto (isso foi geardo automaticamente pelo prisma)
}

datasource db {
  provider = "sqlite"
  url      = "file:../dev.db"
}

model Usuario {
  id        Int      @id @default(autoincrement())
  name      String?
  email     String   @unique
  password  String
  cpf       String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  Pedido Pedido[]
}

model Produto {
  id          Int      @id @default(autoincrement())
  nome        String
  descricao   String
  preco       Float
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  Pedido Pedido[]
}

model Pedido {
  id          Int      @id @default(autoincrement())
  usuarioId   Int
  usuario     Usuario  @relation(fields: [usuarioId], references: [id])
  
  total       Float
  status      String
  
  produtos Produto[]
  
  freteId     Int?
  frete       Frete?     @relation(fields: [freteId], references: [id])

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

}

model Frete {
  id          Int      @id @default(autoincrement())
  valor       Float
  enderecoId  Int
  endereco    Endereco @relation(fields: [enderecoId], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  Pedido Pedido[]
}

model Endereco {
  id        Int      @id @default(autoincrement())
  rua       String
  numero    String
  cidade    String
  estado    String
  cep       String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  fretes    Frete[]
}